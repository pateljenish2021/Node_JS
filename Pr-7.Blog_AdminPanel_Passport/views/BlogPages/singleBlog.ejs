<%- include('../Layout/header'); %>

<div class="page-wrapper py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    
                    <img class="card-img-top w-100" src="<%= blog.image %>" alt="<%= blog.title %>" 
                        style="height: 450px; object-fit: cover; border-radius: 10px 10px 0 0;">

                    <div class="card-body p-4">
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="badge text-white px-3 py-2" 
                                  style="background-color: #007bff; font-size: 14px; font-weight: 500;">
                                <i class="fas fa-tag"></i> <%= blog.category %>
                            </span>
                            <small class="text-muted"><i class="far fa-calendar-alt"></i> <%= new Date(blog.createdAt).toDateString() %></small>
                        </div>

                        <h2 class="fw-bold text-center mb-3" style="color: #333;"><%= blog.title %></h2>
                        
                        <p class="text-center text-muted"><i class="fas fa-user-edit"></i> <strong><%= blog.author %></strong></p>

                        <hr class="mb-4">

                        <p class="fs-5 text-justify" style="line-height: 1.8; color: #555;"><%= blog.description %></p>

                        <div class="text-center mt-4">
                            <a href="/blogs/view-blogs" class="btn btn-dark px-4 py-2"
                               style="border-radius: 30px; transition: all 0.3s ease-in-out;">
                                <i class="fas fa-arrow-left"></i> Back to Blogs
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../Layout/footer'); %>
