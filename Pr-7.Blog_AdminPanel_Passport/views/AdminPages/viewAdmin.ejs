<%- include('../Layout/header'); %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Admin List</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Admin List</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Admin Management</h5>
                        <a href="/admin/add-admin" class="btn btn-primary mb-3">+ Add New Admin</a>
                        
                        <div class="table-responsive">
                            <table id="adminTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Profile</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Hobbies</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (admins.length > 0) { %>
                                        <% admins.forEach((admin) => { %>
                                            <tr>
                                                <td>
                                                    <% if (admin.image) { %>
                                                        <img src="/uploads/<%= admin.image %>" alt="Profile" width="50" height="50" class="rounded-circle">
                                                    <% } else { %>
                                                        <img src="/images/default-avatar.png" alt="Profile" width="50" height="50" class="rounded-circle">
                                                    <% } %>
                                                </td>
                                                <td><%= admin.firstname %> <%= admin.lastname %></td>
                                                <td><%= admin.email %></td>
                                                <td><%= admin.gender %></td>
                                                <td><%= admin.hobbies ? admin.hobbies.join(", ") : "N/A" %></td>
                                                <td>
                                                    <a href="/admin/edit-admin/<%= admin._id %>" class="btn btn-warning btn-sm">Edit</a>
                                                    <a href="/admin/delete-admin/<%= admin._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">No Admins Found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../Layout/footer'); %>

<script>
    $(document).ready(function() {
        $('#adminTable').DataTable();
    });
</script>
