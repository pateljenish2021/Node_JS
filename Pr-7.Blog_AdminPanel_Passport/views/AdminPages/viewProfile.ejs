<%- include('../Layout/header'); %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Admin Profile</h3>
                </div>
                <div class="card-body">
                    <img src="/uploads/<%= admin.image %>" class="rounded-circle" width="150" height="150" alt="Admin Image">
                    <h4 class="mt-3"><%= admin.firstname %> <%= admin.lastname %></h4>
                    <p>Email: <%= admin.email %></p>
                    <p>Gender: <%= admin.gender %></p>
                    <p>Hobbies: <%= admin.hobbies %></p>
                    <a href="/admin/logout" class="btn btn-danger mt-3">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../Layout/footer'); %>
