<%- include('../Layout/header'); %>

<div class="page-wrapper">
    <div class="container-fluid">
        <h2 class="mb-4">Manage Blogs</h2>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Category</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% blogs.forEach((blog, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <img src="<%= blog.image.startsWith('/uploads/') ? blog.image : '/uploads/' + blog.image %>" 
                                         width="80" height="50" alt="Blog Image">
                                </td>
                                <td><%= blog.title %></td>
                                <td><%= blog.author %></td>
                                <td><%= blog.category %></td>
                                <td><%= blog.createdAt ? new Date(blog.createdAt).toDateString() : 'N/A' %></td>
                                <td>
                                    <a href="/blogs/edit-blog/<%= blog._id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/blogs/delete-blog/<%= blog._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</a>
                                </td>                                
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../Layout/footer'); %>
