<%- include('../Layout/header'); %>

<div class="page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <img class="card-img-top" src="<%= blog.image %>" alt="<%= blog.title %>" style="height: 400px; object-fit: cover;">
                    <div class="card-body">
                        <h3 class="card-title"><%= blog.title %></h3>
                        <p class="text-muted">By <strong><%= blog.author %></strong> | <small>Category: <%= blog.category %></small></p>
                        <p><strong>Published on:</strong> <%= new Date(blog.createdAt).toDateString() %></p>
                        <hr>
                        <p class="card-text"><%= blog.description %></p>
                        <a href="/blogs/view-blogs" class="btn btn-secondary">Back to Blogs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../Layout/footer'); %>
